pico-8 cartridge // http://www.pico-8.com
version 29
__lua__

function _init()
  xp = (128/2)-(6*10/2)
  yp = 7
  timer = 1
  mode=2
  ps = {}
  bx = (128/2)-(6*10/2)
  by = 6
  level = 1
  lines = 0
  spd   = 30-(level*2)
  brd = {}
  for x=1, 200 do
    brd[x]=0
  end

		//add all pieces
  add(ps,split("1".. //t.shape
               ",20,21,22,31,"..
               "11,20,21,31,"..
               "11,20,21,22,"..
               "11,21,22,31"
               ,","))
  add(ps,split("2".. //b.el
               ",20,21,22,32,"
               ,","))
  add(ps,split("3,20,21,31,32",","))
  add(ps,split("1,20,21,31,32",","))
  add(ps,split("2,21,22,30,31",","))
  add(ps,split("3,20,21,22,30",","))
  add(ps,split("1,20,21,22,23",","))
  pc  = rnd(ps)
  px  = 3
  py  = 0
  nxt = rnd(ps)
end

function _update()
  if(mode==1) then -- title
  end
  if(mode==2) then -- game
    btn_press()
    timer = timer + 1
    if(timer == spd) then
      timer = 0
    end
  end
end

function _draw()
  cls()
  if(mode==2) then --draw game
    game_draw()
  end
end

function game_draw()
  draw_board()
  if(timer == 0) then
    py = py+1
  end
  if(py > 19) then
    pc=nxt
    nxt=rnd(ps)
    px  = 3
    py  = 0
  end
  //draw board pieces
  for j=1,22 do
    for i=1,10 do
      pos=brd[i*10+j]
      if(pos!=0) then
      spr(pos,
      bx+((i-1)*6),
      by+(j-1)*6)
      end
    end
  end
  //draw current piece
  put_piece(pc,bx+px*6,
            by+py*6,small)
end

function draw_board()
  rect(0,0,127,127,1)
  l = (128/2)-(6*10/2)-2
  m = (128/2)+(6*10/2)
  draw_rect(31,0,64,127)
  
  //print next piece
  draw_rect(96,60,28,23)
  print(" next",99,63,7)
  nx = 5
  ny = 16
  put_piece(nxt,99,70,false)

  //print lines
  draw_rect(96,10,24,16)
  print("lines",99,13,7)
  print(
    tostr(lines\100)..
    tostr(lines\10%10)..
    tostr(lines%10),103,19,7)


  //print level
  draw_rect(96,84,24,16)
  print("level",99,87,7)
  print(tostr(level\10)..
        tostr(level%10),
        104,93,7)

  //print stats
  print("stats",6,42,7)
  draw_rect(0,39,31,67)
  x = 3 y = 50
  for p in all(ps) do
    put_piece(p,x,y,true)
    print("000",x+14,y,5)
    y = y + 8
  end
end

//print tetris piece
function put_piece(p,x,y,small)
  for i=2,5 do
    s=p[1] --get sprite
    off=6  --offset
    if small then
      s=p[1]+16
      off=3
    end
    posx = (p[i]%10)*off+x
    posy = ((p[i]-20)\10)*off+y
    spr(s,posx,posy)
  end
end

function draw_rect(x,y,w,h)
  rect(x,y,x+w,y+h,1)
  rect(x+1,y+1,x+w-1,y+h-1,6)
  line(x,y,x+1,y+1,0)
  line(x+w,y,x+w-1,y+1,0)
  line(x,y+h,x+1,y+h-1,0)
  line(x+w,y+h,x+w-1,y+h-1,0)
end

function btn_press()
  tx=px
  er=false
  m=false //didn't move yet
  if(btnp(⬅️)) then
    m=true
    tx=px-1
    if(tx<0) then er=true end
  end
  if(btnp(➡️)) then
    m=true
    tx=px+1
    if(tx>9) then er=true end
  end
  if m then
    for x=2,5 do
      if(pc[x]+tx<0) then
        er=true
      end
      if(pc[x]%10+tx>9) then
        er=true
      end
      if collision(tx) then
        er=true
      end
    end
  end
  if(er==false) then
    px=tx
  end
end

function collision(x)
  return false
end
